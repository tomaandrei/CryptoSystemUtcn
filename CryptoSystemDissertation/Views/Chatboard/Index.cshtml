@model IEnumerable<CryptoSystemDissertation.Models.UserAccount>

<div class="container">
    <h2>Chatboard</h2>

    @foreach (var user in Model)
    {
        <div class="col-lg-3">
            <div class="card transition">
                <h2 class="transition">@user.FirstName @user.LastName</h2>
                <p>@user.Email</p>
                <div class="cta-container transition" onclick="RSACrypto.SendPublicKey(@user.UserID);"><a href="#" class="cta">Message @user.LastName</a></div>
                <div class="card_circle transition"></div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
