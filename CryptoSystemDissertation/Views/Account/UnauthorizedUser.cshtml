
@{
    ViewBag.Title = "UnauthorizedUser";
}
<div class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <i class="fa fa-exclamation-triangle auth-warning" aria-hidden="true"></i>
                    <h1>You are unauthorized to see this page.</h1>
                    <h3>Please make sure you are registered and logged in. Thank you!</h3>
                    <hr class="intro-divider">
                    <ul class="list-inline intro-social-buttons">
                        <li>
                            <a href="@Url.Action("Register", "Account")" class="btn btn-default btn-lg"><i class="fa fa-retweet fa-fw"></i> <span class="network-name">Register</span></a>
                        </li>
                        <li>
                            <a href="@Url.Action("Login", "Account")" class="btn btn-default btn-lg"><i class="fa fa-sign-in fa-fw"></i> <span class="network-name">Login</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
